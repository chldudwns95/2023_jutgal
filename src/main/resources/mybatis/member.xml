<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">

    <select id = "login" resultType = "Member">
        SELECT MEM_ID AS MEM_ID
              ,MEM_PW AS MEM_PW
              ,ROLE AS ROLE
              ,NAME AS NAME
        FROM MEMBER_INFO
        WHERE MEM_ID = #{memId}
    </select>
  <!--  /*      암호화 전
    SELECT MEM_ID AS MEM_ID
    ,ROLE AS ROLE
    ,NAME AS NAME
    FROM MEMBER_INFO
    WHERE MEM_ID = #{MEM_ID}
    AND MEM_PW = #{MEM_PW}
    */

    /* PW는 Controller 에서 비교하기때문에 id값만 비교하면 됨.*/-->

    <select id = "findByPw" resultType="Member">
        SELECT MEM_PW AS MEM_PW
        FROM MEMBER_INFO
        WHERE MEM_ID = #{memId}
    </select>


    <insert id = "signup">
        INSERT INTO MEMBER_INFO
        (
             MEM_ID
            ,MEM_PW
            ,ROLE
            ,NAME
        )VALUES
        (
             #{memId}
            ,#{memPw}
            ,#{role}
            ,#{name}
        )
    </insert>
</mapper>